    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "flutter_flavors",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "flutter_flavors (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_flavors (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "dev_flavor",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_dev.dart",
            "args": [
                "--flavor",
                "dev"
            ]

        },
        {
            "name": "prod_flavor",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_prod.dart",
            "args": [
                "--flavor",
                "prod"
            ]

        }
    ]
}